{
  "compilerOptions": {
    "target": "esnext", // Use "esnext" for better modern JS compatibility
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmit": true, // Prevents emitting compiled JS files (Vite handles this)
    "jsx": "react-jsx",
    "types": ["vite/client"] // Ensures Vite types are recognized
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
